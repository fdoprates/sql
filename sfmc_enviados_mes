SELECT DISTINCT
    COUNT(DISTINCT s.SubscriberKey) AS NewSubscribers,
    DATEPART(MONTH, s.DateJoined) AS Month,
    DATEPART(YEAR, s.DateJoined) AS Year,
    GETDATE() AS InsertDate
FROM
    _Subscribers s
WHERE
    s.Status = 'Active'
    AND s.DateJoined >= DATEADD(MONTH, -6, GETDATE())
    AND s.DateJoined <= GETDATE()
GROUP BY
    DATEPART(MONTH, s.DateJoined),
    DATEPART(YEAR, s.DateJoined)


----- sent

SELECT DISTINCT
    COUNT(DISTINCT s.SubscriberKey) AS SentCount,
    DATEPART(MONTH, s.EventDate) AS Month,
    DATEPART(YEAR, s.EventDate) AS Year,
    GETDATE() AS InsertDate
FROM
    _Sent s
WHERE
    s.EventDate >= DATEADD(MONTH, -6, GETDATE())
    AND s.EventDate <= GETDATE()
GROUP BY
    DATEPART(MONTH, s.EventDate),
    DATEPART(YEAR, s.EventDate)

------------- active
SELECT DISTINCT
    COUNT(DISTINCT s.SubscriberKey) AS TotalActiveSubscribersNow,
    DATEPART(MONTH, GETDATE()) AS Month,
    DATEPART(YEAR, GETDATE()) AS Year,
    GETDATE() AS InsertDate
FROM
    _Subscribers s
WHERE
    s.Status = 'Active'